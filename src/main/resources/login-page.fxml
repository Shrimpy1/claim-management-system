<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10.0" xmlns:fx="http://javafx.com/fxml" fx:controller="rmit.furtherprog.claimmanagementsystem.controller.LoginController">
    <children>
        <HBox alignment="CENTER" spacing="10.0">
            <children>
                <Label text="Username:" />
                <TextField fx:id="usernameField" />
            </children>
        </HBox>
        <HBox alignment="CENTER" spacing="10.0">
            <children>
                <Label text="Password:" />
                <PasswordField fx:id="passwordField" />
            </children>
        </HBox>
        <Button text="Login" onAction="#handleLoginButtonAction" defaultButton="true"/>
    </children>
    <padding>
        <Insets top="25" right="25" bottom="25" left="25" />
    </padding>
</VBox>
